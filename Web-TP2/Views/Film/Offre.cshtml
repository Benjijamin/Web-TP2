
@{
    ViewBag.Title = "Offres";
}

<body>
    <div style="margin-top:30px; text-align:center;">
        <h1>Offres</h1>
    </div>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin-top:50px;">
        <ol class="carousel-indicators">
            @{
                int index = 0;
                foreach (var f in ViewBag.listeFilms)
                {
                    if (index == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@index" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@index"></li>
                    }
                }
            }
        </ol>
        <div class="carousel-inner">
            @{
                index = 0;
                foreach (var f in ViewBag.listeFilms)
                {
                    if (index == 0)
                    {
                        <div class="carousel-item active">
                            <a href="@f.Id">
                                <img class="d-block w-100" src="~/Content/@f.Image" alt="@f.Nom">
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item ">
                            <a href="@f.Id">
                                <img class="d-block w-100" src="~/Content/@f.Image" alt="@f.Nom">
                            </a>
                        </div>
                    }
                    index++;
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>







</body>

